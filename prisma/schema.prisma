generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reel {
  id         String   @id @default(cuid())
  uploadedBy String
  tokenId    String
  txnHash    String
  ipfsCid    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("reels")
}
